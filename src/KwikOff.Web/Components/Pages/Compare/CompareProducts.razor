    private async Task ExportToKwikKart()
    {
        if (comparisonResults == null || !comparisonResults.Items.Any())
        {
            errorMessage = "No results to export";
            return;
        }

        isExportingToKwikKart = true;
        kwikKartExportResult = null;

        try
        {
            // Get all matched products (not just current page)
            var allResultsQuery = new GetComparisonResultsQuery(
                tenantId,
                selectedBatchId,
                MatchStatus.Matched, // Only export matched products
                1,
                int.MaxValue); // Get all matched products
            
            var allResults = await Mediator.Send(allResultsQuery);

            // Export to KwikKart
            kwikKartExportResult = await KwikKartService.ExportToKwikKart(allResults.Items, tenantId);
        }
        catch (Exception ex)
        {
            kwikKartExportResult = new KwikKartExportResult
            {
                Success = false,
                ErrorMessage = $"Export failed: {ex.Message}",
                TenantId = tenantId
            };
        }
        finally
        {
            isExportingToKwikKart = false;
        }
    }

    private void SortBy(string column)
    {
        if (comparisonResults == null || !comparisonResults.Items.Any())
            return;

        // Toggle sort direction if clicking the same column
        if (sortColumn == column)
        {
            sortDescending = !sortDescending;
        }
        else
        {
            sortColumn = column;
            sortDescending = false;
        }

        // Sort the results
        comparisonResults.Items = column switch
        {
            "Barcode" => sortDescending
                ? comparisonResults.Items.OrderByDescending(r => r.Barcode).ToList()
                : comparisonResults.Items.OrderBy(r => r.Barcode).ToList(),

            "ProductName" => sortDescending
                ? comparisonResults.Items.OrderByDescending(r => r.ProductName).ToList()
                : comparisonResults.Items.OrderBy(r => r.ProductName).ToList(),

            "OffProductName" => sortDescending
                ? comparisonResults.Items.OrderByDescending(r => r.OffProductName ?? "").ToList()
                : comparisonResults.Items.OrderBy(r => r.OffProductName ?? "").ToList(),

            "MatchStatus" => sortDescending
                ? comparisonResults.Items.OrderByDescending(r => r.MatchStatus).ToList()
                : comparisonResults.Items.OrderBy(r => r.MatchStatus).ToList(),

            "ConfidenceScore" => sortDescending
                ? comparisonResults.Items.OrderByDescending(r => r.ConfidenceScore).ToList()
                : comparisonResults.Items.OrderBy(r => r.ConfidenceScore).ToList(),

            "HasDiscrepancies" => sortDescending
                ? comparisonResults.Items.OrderByDescending(r => r.HasDiscrepancies).ToList()
                : comparisonResults.Items.OrderBy(r => r.HasDiscrepancies).ToList(),

            _ => comparisonResults.Items
        };
    }

