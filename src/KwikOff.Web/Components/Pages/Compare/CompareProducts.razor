@page "/compare"
@rendermode InteractiveServer
@using KwikOff.Web.Features.Products
@using KwikOff.Web.Features.Comparison
@using KwikOff.Web.Domain.Enums
@using KwikOff.Web.Infrastructure.Services
@implements IDisposable
@inject IMediator Mediator
@inject IKwikKartIntegrationService KwikKartService

<PageTitle>Compare Products - KwikOff</PageTitle>

<style>
    th[style*="cursor: pointer"]:hover {
        background-color: #f8f9fa;
        user-select: none;
    }
</style>

<h1>Compare Products</h1>
<p>Compare your imported products against the Open Food Facts database.</p>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">‚ùå Error!</h4>
        <p><strong>@errorMessage</strong></p>
        @if (!string.IsNullOrEmpty(errorDetails))
        {
            <hr>
            <pre class="mb-0" style="white-space: pre-wrap; font-size: 0.875rem;">@errorDetails</pre>
        }
        <button type="button" class="btn-close" @onclick="() => { errorMessage = null; errorDetails = null; }"></button>
    </div>
}

@if (isComparing)
{
    <div class="alert alert-info">
        <div class="d-flex align-items-center">
            <div class="spinner-border spinner-border-sm me-2" role="status"></div>
            <strong>Comparing products... This may take a few moments.</strong>
        </div>
    </div>
}

<div class="row mb-3">
    <div class="col-md-9">
        <label for="batchId" class="form-label">Import Batch</label>
        <select class="form-select" id="batchId" @bind="selectedBatchId" @bind:after="OnBatchSelected">
            @if (availableBatches.Count == 0)
            {
                <option value="">No imports found</option>
            }
            else
            {
                <option value="">Select a batch to compare...</option>
                @foreach (var batch in availableBatches)
                {
                    <option value="@batch.BatchId">
                        @(batch.FileName ?? "Unknown file") - @batch.ProductCount products - @batch.ImportedAt.ToString("MMM d, yyyy h:mm tt")
                    </option>
                }
            }
        </select>
        <div class="form-text">Select which import to compare against Open Food Facts - All products will be compared</div>
    </div>
    <div class="col-md-3 d-flex align-items-end gap-2">
        <button class="btn btn-primary" @onclick="StartComparison" disabled="@(isComparing || !selectedBatchId.HasValue)">
            @if (isComparing)
            {
                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
            }
            Compare Products
        </button>
        <button class="btn btn-outline-secondary" @onclick="LoadBatches">
            Refresh Batches
        </button>
    </div>
</div>

@if (comparisonSummary != null)
{
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h2 class="mb-0">@comparisonSummary.TotalProducts</h2>
                    <p class="text-muted mb-0">Total Compared</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h2 class="mb-0">@comparisonSummary.MatchedCount</h2>
                    <p class="mb-0">Matched</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-warning">
                <div class="card-body">
                    <h2 class="mb-0">@comparisonSummary.DiscrepancyCount</h2>
                    <p class="mb-0">Discrepancies</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-secondary text-white">
                <div class="card-body">
                    <h2 class="mb-0">@comparisonSummary.UnmatchedCount</h2>
                    <p class="mb-0">Not Found</p>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Match Rate:</strong> @comparisonSummary.MatchRate.ToString("P1") |
        <strong>Duration:</strong> @comparisonSummary.Duration.TotalSeconds.ToString("F1")s
    </div>

    @if (comparisonResults != null && comparisonResults.Items.Any())
    {
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">üöÄ Export to KwikKart</h5>
                        <p class="card-text">
                            Send @comparisonSummary.MatchedCount matched products to KwikKart retail management system.
                            This will create/update products with enriched data from OpenFoodFacts.
                        </p>
                        <button class="btn btn-primary btn-lg" @onclick="ExportToKwikKart" disabled="@isExportingToKwikKart">
                            @if (isExportingToKwikKart)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                <span>Exporting...</span>
                            }
                            else
                            {
                                <span>Export to KwikKart</span>
                            }
                        </button>
                        @if (kwikKartExportResult != null)
                        {
                            <div class="mt-3">
                                @if (kwikKartExportResult.Success)
                                {
                                    <div class="alert alert-success mb-0">
                                        <h6 class="alert-heading">‚úÖ Export Successful!</h6>
                                        <p class="mb-1"><strong>Exported:</strong> @kwikKartExportResult.ProductsExported products</p>
                                        <p class="mb-1"><strong>Created:</strong> @kwikKartExportResult.ProductsCreated | <strong>Updated:</strong> @kwikKartExportResult.ProductsUpdated | <strong>Skipped:</strong> @kwikKartExportResult.ProductsSkipped</p>
                                        <p class="mb-0"><strong>Duration:</strong> @kwikKartExportResult.Duration.TotalSeconds.ToString("F1")s</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger mb-0">
                                        <h6 class="alert-heading">‚ùå Export Failed</h6>
                                        <p class="mb-0">@kwikKartExportResult.ErrorMessage</p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}

@if (comparisonResults != null)
{
    <div class="row mb-3">
        <div class="col-md-6">
            <label for="searchFilter" class="form-label">Search All Results</label>
            <input type="text" class="form-control" id="searchFilter" @bind="searchFilterText" @bind:event="oninput" @bind:after="OnSearchChanged"
                   placeholder="Search by barcode, product name, or brand..." />
            <div class="form-text">
                @if (isSearching)
                {
                    <span class="spinner-border spinner-border-sm me-1"></span>
                    <span>Searching...</span>
                }
                else if (!string.IsNullOrWhiteSpace(searchFilterText))
                {
                    <span>Found @comparisonResults.TotalCount results matching "@searchFilterText"</span>
                }
                else
                {
                    <span>Total @comparisonResults.TotalCount results - Type to search all comparison results</span>
                }
            </div>
        </div>
        <div class="col-md-3">
            <label for="pageSize" class="form-label">Items Per Page</label>
            <select class="form-select" id="pageSize" @bind="pageSize" @bind:after="OnPageSizeChanged">
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="200">200</option>
            </select>
            <div class="form-text">Change how many items to display</div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Comparison Results</strong>
            <div>
                <div class="btn-group btn-group-sm" role="group">
                    <input type="radio" class="btn-check" name="filter" id="filterAll"
                           checked="@(filter == null)" @onchange="() => SetFilter(null)" />
                    <label class="btn btn-outline-primary" for="filterAll">All</label>

                    <input type="radio" class="btn-check" name="filter" id="filterMatched"
                           checked="@(filter == MatchStatus.Matched)" @onchange="() => SetFilter(MatchStatus.Matched)" />
                    <label class="btn btn-outline-success" for="filterMatched">Matched</label>

                    <input type="radio" class="btn-check" name="filter" id="filterDiscrepancies"
                           checked="@(filter == MatchStatus.Discrepancy)" @onchange="() => SetFilter(MatchStatus.Discrepancy)" />
                    <label class="btn btn-outline-warning" for="filterDiscrepancies">Discrepancies</label>

                    <input type="radio" class="btn-check" name="filter" id="filterNotFound"
                           checked="@(filter == MatchStatus.Unmatched)" @onchange="() => SetFilter(MatchStatus.Unmatched)" />
                    <label class="btn btn-outline-secondary" for="filterNotFound">Not Found</label>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width: 10%; cursor: pointer;" @onclick='() => SortBy("Barcode")'>
                                Barcode @GetSortIcon("Barcode")
                            </th>
                            <th style="width: 20%; cursor: pointer;" @onclick='() => SortBy("ProductName")'>
                                Your Product @GetSortIcon("ProductName")
                            </th>
                            <th style="width: 25%; cursor: pointer;" @onclick='() => SortBy("OffProductName")'>
                                OFF Product @GetSortIcon("OffProductName")
                            </th>
                            <th style="width: 10%; cursor: pointer;" @onclick='() => SortBy("MatchStatus")'>
                                Status @GetSortIcon("MatchStatus")
                            </th>
                            <th style="width: 8%; cursor: pointer;" @onclick='() => SortBy("ConfidenceScore")'>
                                Confidence @GetSortIcon("ConfidenceScore")
                            </th>
                            <th style="width: 27%; cursor: pointer;" @onclick='() => SortBy("HasDiscrepancies")'>
                                Discrepancy Details @GetSortIcon("HasDiscrepancies")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in comparisonResults.Items)
                        {
                            <tr>
                                <td><code>@result.Barcode</code></td>
                                <td>
                                    @result.ProductName
                                    @if (!string.IsNullOrEmpty(result.Brand))
                                    {
                                        <br /><small class="text-muted">@result.Brand</small>
                                    }
                                </td>
                                <td>
                                    @if (result.MatchStatus != MatchStatus.Unmatched)
                                    {
                                        <div class="d-flex align-items-center gap-2">
                                            @* Product Image *@
                                            @if (!string.IsNullOrEmpty(result.ImageUrl))
                                            {
                                                <img src="@result.ImageUrl" 
                                                     alt="@result.OffProductName" 
                                                     class="img-thumbnail"
                                                     style="width: 80px; height: 80px; object-fit: contain;"
                                                     onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22100%22 height=%22100%22%3E%3Crect fill=%22%23ddd%22 width=%22100%22 height=%22100%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22%23999%22%3ENo Image%3C/text%3E%3C/svg%3E'" />
                                            }
                                            else
                                            {
                                                <div class="img-thumbnail d-flex align-items-center justify-content-center text-muted" 
                                                     style="width: 80px; height: 80px; font-size: 0.7rem;">
                                                    No Image
                                                </div>
                                            }
                                            
                                            @* Product Info *@
                                            <div class="flex-grow-1">
                                                @result.OffProductName
                                                @if (!string.IsNullOrEmpty(result.OffBrand))
                                                {
                                                    <br /><small class="text-muted">@result.OffBrand</small>
                                                }
                                                
                                                @* Show info badge if names differ but barcode matched 100% *@
                                                @if (result.ConfidenceScore >= 1.0 && 
                                                     !string.IsNullOrEmpty(result.ProductName) &&
                                                     !string.IsNullOrEmpty(result.OffProductName) &&
                                                     !string.Equals(result.ProductName, result.OffProductName, StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <br />
                                                    <span class="badge bg-info text-dark small mt-1">
                                                        <i class="bi bi-info-circle"></i> Name variation
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not found</span>
                                    }
                                </td>
                                <td>
                                    @switch (result.MatchStatus)
                                    {
                                        case MatchStatus.Matched:
                                            <span class="badge bg-success">Match</span>
                                            @if (result.UsedSecondarySearch)
                                            {
                                                <br />
                                                <small class="text-muted">üîç Secondary</small>
                                            }
                                            break;
                                        case MatchStatus.Discrepancy:
                                            <span class="badge bg-warning text-dark">Discrepancy</span>
                                            @if (result.UsedSecondarySearch)
                                            {
                                                <br />
                                                <small class="text-muted">üîç Secondary</small>
                                            }
                                            break;
                                        case MatchStatus.Unmatched:
                                            <span class="badge bg-secondary">Not Found</span>
                                            break;
                                        case MatchStatus.Error:
                                            <span class="badge bg-danger">Error</span>
                                            break;
                                    }
                                    @if (!string.IsNullOrEmpty(result.MatchMethod))
                                    {
                                        <br />
                                        <small class="text-muted">@result.MatchMethod</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @GetConfidenceBadgeClass(result.ConfidenceScore)">
                                        @result.ConfidenceScore.ToString("P0")
                                    </span>
                                </td>
                                <td>
                                    @if (result.MatchStatus == MatchStatus.Discrepancy && result.DiscrepancyDetails.Any())
                                    {
                                        @* Show actual discrepancies (non-barcode matches with confidence < 100%) *@
                                        <div class="small">
                                            @foreach (var detail in result.DiscrepancyDetails)
                                            {
                                                <div class="mb-2 p-2 bg-light rounded">
                                                    <strong class="text-danger">‚ö†Ô∏è @detail.FieldName:</strong>
                                                    <div class="mt-1">
                                                        <span class="badge bg-secondary me-1">Yours:</span>
                                                        <span>@(detail.ImportedValue ?? "N/A")</span>
                                                    </div>
                                                    <div class="mt-1">
                                                        <span class="badge bg-info me-1">OFF:</span>
                                                        @if (!string.IsNullOrEmpty(result.OffBarcode))
                                                        {
                                                            <a href="https://world.openfoodfacts.org/product/@result.OffBarcode" 
                                                               target="_blank" 
                                                               rel="noopener noreferrer"
                                                               class="text-decoration-none"
                                                               title="View on OpenFoodFacts (opens in new tab)">
                                                                <span>@(detail.OpenFoodFactsValue ?? "N/A")</span>
                                                                <i class="bi bi-box-arrow-up-right ms-1" style="font-size: 0.8em;"></i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <span>@(detail.OpenFoodFactsValue ?? "N/A")</span>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else if (result.MatchStatus == MatchStatus.Matched && result.ConfidenceScore >= 1.0)
                                    {
                                        @* Show informational differences for 100% barcode matches *@
                                        @if (HasInformationalDifferences(result))
                                        {
                                            <div class="small text-muted">
                                                <details>
                                                    <summary class="cursor-pointer" style="cursor: pointer;">
                                                        <i class="bi bi-info-circle"></i> View name variations
                                                    </summary>
                                                    <div class="mt-2 p-2 bg-light rounded">
                                                        <div><strong>Your name:</strong> @result.ProductName</div>
                                                        <div><strong>OFF name:</strong> @result.OffProductName</div>
                                                        <div class="text-success mt-1">
                                                            ‚úÖ Same product - names differ due to data source variations
                                                        </div>
                                                    </div>
                                                </details>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="small text-success">
                                                <i class="bi bi-check-circle"></i> Perfect match
                                            </div>
                                        }
                                        @if (result.UsedSecondarySearch && !string.IsNullOrEmpty(result.SecondarySearchMethod))
                                        {
                                            <br />
                                            <span class="badge bg-info text-dark mt-1">
                                                <i class="bi bi-search"></i> Found via: @result.SecondarySearchMethod
                                            </span>
                                        }
                                        @if (!string.IsNullOrEmpty(result.OffBarcode))
                                        {
                                            <br />
                                            <a href="https://world.openfoodfacts.org/product/@result.OffBarcode" 
                                               target="_blank" 
                                               rel="noopener noreferrer"
                                               class="text-decoration-none mt-1 d-inline-block"
                                               title="View on OpenFoodFacts (opens in new tab)">
                                                View on OpenFoodFacts <i class="bi bi-box-arrow-up-right ms-1"></i>
                                            </a>
                                        }
                                    }
                                    else if (result.MatchStatus == MatchStatus.Matched && !string.IsNullOrEmpty(result.MatchReason))
                                    {
                                        @* Other matched products (confidence < 100%) *@
                                        <div class="small text-success">
                                            <i class="bi bi-check-circle"></i> @result.MatchReason
                                            @if (result.UsedSecondarySearch && !string.IsNullOrEmpty(result.SecondarySearchMethod))
                                            {
                                                <br />
                                                <span class="badge bg-info text-dark mt-1">
                                                    <i class="bi bi-search"></i> Found via: @result.SecondarySearchMethod
                                                </span>
                                            }
                                            @if (!string.IsNullOrEmpty(result.OffBarcode))
                                            {
                                                <br />
                                                <a href="https://world.openfoodfacts.org/product/@result.OffBarcode" 
                                                   target="_blank" 
                                                   rel="noopener noreferrer"
                                                   class="text-decoration-none mt-1 d-inline-block"
                                                   title="View on OpenFoodFacts (opens in new tab)">
                                                    View on OpenFoodFacts <i class="bi bi-box-arrow-up-right ms-1"></i>
                                                </a>
                                            }
                                        </div>
                                    }
                                    else if (result.MatchStatus == MatchStatus.Unmatched && !string.IsNullOrEmpty(result.MatchReason))
                                    {
                                        <div class="small text-muted">
                                            <i class="bi bi-info-circle"></i> @result.MatchReason
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">‚Äî</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (comparisonResults.TotalPages > 1)
        {
            <div class="card-footer">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        <li class="page-item @(comparisonResults.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" href="javascript:void(0)" @onclick="() => LoadPage(currentPage - 1)">Previous</a>
                        </li>
                        @for (var i = 1; i <= Math.Min(comparisonResults.TotalPages, 5); i++)
                        {
                            var pageNum = i;
                            <li class="page-item @(pageNum == currentPage ? "active" : "")">
                                <a class="page-link" href="javascript:void(0)" @onclick="() => LoadPage(pageNum)">@pageNum</a>
                            </li>
                        }
                        <li class="page-item @(comparisonResults.HasNextPage ? "" : "disabled")">
                            <a class="page-link" href="javascript:void(0)" @onclick="() => LoadPage(currentPage + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>

    <div class="mt-3">
        <a href="export" class="btn btn-success">Export Results</a>
    </div>
}
else if (!isComparing && availableBatches.Count == 0)
{
    <div class="alert alert-info">
        <strong>No imported products found</strong>
        <p class="mb-0">Import products first to compare them against Open Food Facts.</p>
        <a href="import" class="btn btn-primary mt-2">Import Products</a>
    </div>
}

@code {
    private string tenantId = "default";
    private Guid? selectedBatchId;
    private MatchStatus? filter;
    private bool isComparing;
    private bool isExportingToKwikKart;
    private int currentPage = 1;
    private int pageSize = 20; // Default page size
    private string searchFilter = ""; // Used for pre-comparison filtering
    private string searchFilterText = ""; // Used for database search
    private bool isSearching = false;
    private int? filterPreviewCount;
    private List<ImportBatchSummary> availableBatches = new();
    private ComparisonSummary? comparisonSummary;
    private ComparisonResultsPage? comparisonResults;
    private string? errorMessage;
    private string? errorDetails;
    private KwikKartExportResult? kwikKartExportResult;
    
    // Sorting state
    private string? sortColumn;
    private bool sortDescending;
    
    // Search debounce
    private System.Threading.Timer? searchDebounceTimer;

    private ImportBatchSummary? selectedBatch => selectedBatchId.HasValue
        ? availableBatches.FirstOrDefault(b => b.BatchId == selectedBatchId.Value)
        : availableBatches.FirstOrDefault();

    protected override async Task OnInitializedAsync()
    {
        await LoadBatches();
    }

    private async Task LoadBatches()
    {
        try
        {
            // Load ALL batches regardless of tenant ID
            var query = new GetImportBatchesQuery(null, 1, 100);
            var result = await Mediator.Send(query);
            availableBatches = result.Items;
            errorMessage = null;
            errorDetails = null;
        }
        catch (Exception ex)
        {
            availableBatches = new();
            errorMessage = "Failed to load import batches";
            errorDetails = $"Message: {ex.Message}\n\nStack Trace:\n{ex.StackTrace}";
        }
    }

    private void OnBatchSelected()
    {
        if (selectedBatchId.HasValue)
        {
            // Update tenant ID to match the selected batch
            var selectedBatch = availableBatches.FirstOrDefault(b => b.BatchId == selectedBatchId.Value);
            if (selectedBatch != null)
            {
                tenantId = selectedBatch.TenantId;
            }
        }
    }

    private async Task PreviewFilter()
    {
        if (!selectedBatchId.HasValue) return;

        var query = new CountFilteredProductsQuery(
            selectedBatchId.Value,
            tenantId,
            string.IsNullOrWhiteSpace(searchFilter) ? null : searchFilter);

        filterPreviewCount = await Mediator.Send(query);
    }

    private async Task StartComparison()
    {
        Console.WriteLine($"[DEBUG] StartComparison called. selectedBatchId: {selectedBatchId}, tenantId: {tenantId}");
        
        // Clear any previous errors
        errorMessage = null;
        errorDetails = null;
        
        if (!selectedBatchId.HasValue)
        {
            Console.WriteLine("[DEBUG] No batch selected, returning early");
            errorMessage = "No batch selected";
            errorDetails = "Please select an import batch from the dropdown before clicking Compare.";
            return;
        }

        Console.WriteLine($"[DEBUG] Starting comparison for batch {selectedBatchId.Value}");
        isComparing = true;
        comparisonSummary = null;
        comparisonResults = null;

        try
        {
            Console.WriteLine("[DEBUG] Creating CompareProductsCommand");
            var command = new CompareProductsCommand(
                selectedBatchId.Value, 
                tenantId, 
                int.MaxValue, // Compare all products in the batch
                string.IsNullOrWhiteSpace(searchFilter) ? null : searchFilter);
            
            Console.WriteLine("[DEBUG] Sending command via MediatR");
            comparisonSummary = await Mediator.Send(command);
            
            Console.WriteLine($"[DEBUG] Comparison complete. Results: {comparisonSummary?.TotalProducts} products");

            if (comparisonSummary == null)
            {
                throw new InvalidOperationException("Comparison returned null result");
            }

            await LoadResults();
            Console.WriteLine("[DEBUG] Results loaded successfully");
            
            // Success message
            errorMessage = null;
            errorDetails = null;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[DEBUG] Error during comparison: {ex.Message}");
            Console.WriteLine($"[DEBUG] Stack trace: {ex.StackTrace}");
            
            // Display error in UI
            errorMessage = $"Comparison failed: {ex.GetType().Name}";
            errorDetails = $"Message: {ex.Message}\n\nStack Trace:\n{ex.StackTrace}";
            
            if (ex.InnerException != null)
            {
                errorDetails += $"\n\nInner Exception: {ex.InnerException.GetType().Name}\nMessage: {ex.InnerException.Message}\nStack Trace:\n{ex.InnerException.StackTrace}";
            }
        }
        finally
        {
            isComparing = false;
            Console.WriteLine("[DEBUG] isComparing set to false");
        }
    }

    private async Task LoadResults()
    {
        try
        {
            var query = new GetComparisonResultsQuery(
                tenantId,
                selectedBatchId,
                filter,
                currentPage,
                pageSize,
                string.IsNullOrWhiteSpace(searchFilterText) ? null : searchFilterText);
            comparisonResults = await Mediator.Send(query);
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load comparison results";
            errorDetails = $"Message: {ex.Message}\n\nStack Trace:\n{ex.StackTrace}";
        }
    }

